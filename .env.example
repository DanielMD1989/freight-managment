# Database
DATABASE_URL="postgresql://username:password@localhost:5432/freight_db?schema=public"

# NextAuth / Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="" # Generate with: openssl rand -base64 32

# JWT Authentication (Production-Ready)
JWT_SECRET="" # Generate with: openssl rand -base64 32 (signing key)
JWT_ENCRYPTION_KEY="" # Generate with: openssl rand -base64 32 (encryption key, must be 32 bytes)
JWT_EXPIRES_IN="7d"
JWT_ENABLE_ENCRYPTION="true" # Set to "false" only for debugging

# Email (for password reset, notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@freightplatform.com"

# Payment Provider (Chapa for Ethiopia)
CHAPA_SECRET_KEY=""
CHAPA_PUBLIC_KEY=""
CHAPA_WEBHOOK_SECRET=""

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# GPS Server
GPS_SERVER_PORT="5001"
GPS_SERVER_HOST="0.0.0.0"

# Google Maps / Places API
# Get API key from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Maps JavaScript API, Geocoding API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# App Configuration
NODE_ENV="development"
PORT="3000"

# Admin Configuration
ADMIN_EMAIL="admin@freightplatform.com"

# Logging
LOG_LEVEL="info"

# Feature Flags (for MVP)
ENABLE_SELF_DISPATCH="true"
ENABLE_NOTIFICATIONS="false"
ENABLE_EMAIL_VERIFICATION="false"
