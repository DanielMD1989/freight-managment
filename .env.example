# Database
DATABASE_URL="postgresql://username:password@localhost:5432/freight_db?schema=public"

# Database Connection Pool (PHASE 1: 10K+ DAU Support)
# For direct PostgreSQL connection:
DB_POOL_MIN="5"                    # Minimum connections (dev: 5, prod: 10)
DB_POOL_MAX="20"                   # Maximum connections (dev: 20, prod: 100)
DB_HEALTH_CHECK_INTERVAL_MS="30000" # Health check interval in ms

# For PgBouncer connection pooling (recommended for production):
# PGBOUNCER_ENABLED="true"         # Enable PgBouncer mode (smaller app pool)
# DATABASE_URL="postgresql://username:password@localhost:6432/freight_db?schema=public"
# DB_POOL_MIN="2"                  # Smaller pool when using PgBouncer
# DB_POOL_MAX="10"                 # PgBouncer handles main pooling

# PgBouncer Configuration (for docker-compose)
# DB_HOST="postgres"               # PostgreSQL host
# DB_PORT="5432"                   # PostgreSQL port
# DB_NAME="freight_db"             # Database name
# DB_USER="postgres"               # Database user
# DB_PASSWORD=""                   # Database password

# NextAuth / Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="" # Generate with: openssl rand -base64 32

# JWT Authentication (Production-Ready)
JWT_SECRET="" # Generate with: openssl rand -base64 32 (signing key)
JWT_ENCRYPTION_KEY="" # Generate with: openssl rand -base64 32 (encryption key, must be 32 bytes)
JWT_EXPIRES_IN="7d"
JWT_ENABLE_ENCRYPTION="true" # Set to "false" only for debugging

# Email (for password reset, notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@freightplatform.com"

# Payment Provider (Chapa for Ethiopia)
CHAPA_SECRET_KEY=""
CHAPA_PUBLIC_KEY=""
CHAPA_WEBHOOK_SECRET=""

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# GPS Server
GPS_SERVER_PORT="5001"
GPS_SERVER_HOST="0.0.0.0"

# Google Maps / Places API
# Get API key from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Maps JavaScript API, Geocoding API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# App Configuration
NODE_ENV="development"
PORT="3000"

# Admin Configuration
ADMIN_EMAIL="admin@freightplatform.com"

# Logging
LOG_LEVEL="info"

# Redis (PHASE 2: Distributed Rate Limiting for 10K+ DAU)
# For local development (optional):
# REDIS_ENABLED="true"           # Enable Redis-backed rate limiting
# REDIS_HOST="localhost"          # Redis host
# REDIS_PORT="6379"               # Redis port
# REDIS_PASSWORD=""               # Redis password (optional)
# REDIS_DB="0"                    # Redis database number

# For production (use URL format):
# REDIS_URL="redis://:password@redis-host:6379/0"

# Rate Limiting Configuration
# RATE_LIMIT_ENABLED="true"       # Enable rate limiting (default: true)
# RATE_LIMIT_BYPASS_KEY=""        # Secret key to bypass rate limits (admin use)

# Feature Flags (for MVP)
ENABLE_SELF_DISPATCH="true"
ENABLE_NOTIFICATIONS="false"
ENABLE_EMAIL_VERIFICATION="false"
