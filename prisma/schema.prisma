model RouteCache {
  id              String   @id @default(cuid())
  cacheKey        String   @unique // "route:{originLat},{originLng}:{destLat},{destLng}"
  distanceMeters  Decimal  @db.Decimal(12, 2)
  distanceKm      Decimal  @db.Decimal(10, 2)
  durationSeconds Int

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([createdAt])
  @@map("route_cache")
}

